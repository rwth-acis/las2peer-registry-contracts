{
  "extends": "standard",
  "env": {
    "node": true
  },
  "globals": {
    "artifacts": false,
    "contract": false,
    "assert": false,
    "web3": false
  },
  "rules": {
    "strict": ["error", "global"],
    "eol-last": ["error", "always"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
    "no-trailing-spaces": ["error", { "skipBlankLines": false }],
    "quotes": ["warn", "single"],
    "semi": ["error", "always"]
  }
}
